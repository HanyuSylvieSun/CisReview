
<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number, id: :course_number %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :course_name %>
  </div>

  <div class="field">
    <%= form.label :website %>
    <%= form.text_field :website, id: :course_website %>
  </div>

  <div class="field">
    <%= form.label :instructor_id %>
    <%= form.collection_select(:instructor_id, Instructor.all, :id, :last_name, :include_blank => '--None--') %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

